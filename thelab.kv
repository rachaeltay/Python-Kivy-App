AnchorLayoutExample:

<AnchorLayoutExample>:
    # right, left, center
    anchor_x: "center"
    # bottom, top, center
    anchor_y: "center"
    Button:
        text: "A"
        size_hint: .1, .1


<BoxLayoutExample>:
    orientation: "horizontal"
    Button:
        text: "A"
        size_hint: .5, .5
        # height: "60dp"
        # width: "100dp"
        # x, center_x, right
        # y, center_y, top
        pos_hint: { "y": .25 }
    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        Button:
            text: "B1"
        Button:
            text: "B2"
        Button:
            text: "B3"
        Button:
            text: "B4"
    Button:
        text: "C"


<MainWidget>:
    Button:
        text: "Hello"
        size: "40dp", "40dp"
        pos: "100dp", "100dp"
        color: 0, 1, 0, 1
    Label:
        text: "Hello"
        size: "40dp", "40dp"
        pos: "200dp", "300dp"
        color: 0, 0, 1, 1